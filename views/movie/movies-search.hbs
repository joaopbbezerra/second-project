<h1>Movies Search</h1>

{{#if searchResult}}
<div class="row">
    {{#each searchResult.results}} 
<div class="col-md-4">
    <div class="card cards-flex">
        <img class="card-img-top" src="{{poster}}" alt="{{title}}" />
        <div class="card-body">
            <h5 class="card-title">{{title}}</h5>
            <a class="clean-a" href="/movies-details/{{imdbid}}">View Details</a>
        </div>
    </div>
</div>
{{/each}}
</div>

{{/if}}

