
    <form class="center-form search-bar-position" action="/movies-search" method="POST">
        <input class="form-control me-2 center-search-bar" type="search" name="title" placeholder="Search for a Movie"
            aria-label="Search">
        <button class="btn btn-danger btn-search-style" type="submit">Search</button>
    </form>
    <div class="carousel slide" data-ride="carousel" id="carouselExampleIndicators">
